modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "openssl", "portaudio", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flask_website"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "flask_website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add flask-login speechrecognition pyaudio"

[[ports]]
localPort = 5000
externalPort = 80
